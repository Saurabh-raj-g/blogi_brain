{
    "extends": "adonis-preset-ts/tsconfig.json",
    "include": ["**/*"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "build",
        "rootDir": "./",
        "sourceMap": true,
        "noImplicitAny": false,
        "paths": {
            "App/*": ["./app/*"],
            "Config/*": ["./config/*"],
            "Contracts/*": ["./contracts/*"],
            "Database/*": ["./database/*"]
        },
        "types": [
            "@adonisjs/core",
            "@adonisjs/repl",
            "@japa/preset-adonis/build/adonis-typings",
            "@adonisjs/lucid",
            "@adonisjs/auth",
            "@adonisjs/mail",
            "adonisjs-cloudinary"
        ]
    }
}
